{
  "compilerOptions": {
    
    "rootDir": "./",          
    "outDir": "./dist",      
    "esModuleInterop": true,

    
    "module": "CommonJS",
    "target": "ES6",
    "types": ["node"],
    "lib": ["ESNext"],

   
    "sourceMap": true,               
    "declaration": true,
    "declarationMap": true,

    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

   
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],        
  "exclude": ["node_modules", "dist"] 
}
